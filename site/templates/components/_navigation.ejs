<button class="hamburger  js-hamburger" type="button" aria-label="Open menu">
  <svg class="hamburger__icon" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 14 12">
    <line class="hamburger__bun hamburger__bun--top" x1="2" y1="2" x2="12" y2="2"></line>
    <line class="hamburger__bun hamburger__bun--middle" x1="2" y1="6" x2="12" y2="6"></line>
    <line class="hamburger__bun hamburger__bun--bottom" x1="2" y1="10" x2="12" y2="10"></line>
  </svg>
</button>

<nav class="navigation">

  <ul class="navigation__bar">

    <% site.navigation.primary.forEach((link) => { %>
      <li><a class="navigation__primary" href="<%= link.url %>"><%= link.title %></a></li>
    <% }); %>

    <ul class="navigation__item  contact">
      <li><a class="contact__email" href="mailto:<%= meta.email %>"><%= meta.email %></a></li>
      <% site.navigation.contact.forEach((link) => { %>
        <li><a class="contact__icon  u-<%= link.title.toLowerCase() %> u-accessible-text" href="<%= link.url %>" rel="nofollow noopener" target="_blank"><%= link.title %></a></li>
      <% }); %>
    </ul><!-- /.navigation__item -->

  </ul><!-- /.navigation -->

</nav>
